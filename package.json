{
  "name": "@homebound/beam",
  "version": "0.1.0",
  "author": "Homebound",
  "license": "MIT",
  "main": "dist/index.js",
  "module": "dist/beam.esm.js",
  "typings": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/homebound-team/beam"
  },
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": "14.8.0"
  },
  "scripts": {
    "start": "concurrently -c green 'npm:watch' 'npm:storybook'",
    "watch": "concurrently -c blue, magenta 'npm:watch:beam' 'npm:watch:truss'",
    "watch:beam": "tsdx watch --format esm",
    "watch:truss": "cd ./truss && watch 'npm run generate' ./",
    "build": "tsdx build --format esm",
    "build:truss": "cd ./truss && npm run generate",
    "build:storybook": "build-storybook",
    "test": "tsdx test --passWithNoTests",
    "lint": "tsdx lint --write-file",
    "prepare": "npm run build",
    "storybook": "start-storybook -p 9000"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 120,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "peerDependencies": {
    "react": ">=16"
  },
  "dependencies": {
    "@emotion/react": "^11.1.5"
  },
  "devDependencies": {
    "@babel/core": "^7.13.1",
    "@emotion/babel-plugin": "^11.2.0",
    "@storybook/addon-essentials": "^6.1.20",
    "@storybook/addon-info": "^5.3.21",
    "@storybook/addon-links": "^6.1.20",
    "@storybook/addons": "^6.1.20",
    "@storybook/react": "^6.1.20",
    "@types/jest": "^26.0.20",
    "@types/react": "^17.0.2",
    "@types/react-dom": "^17.0.1",
    "babel-loader": "^8.2.2",
    "concurrently": "^6.0.0",
    "conventional-changelog-conventionalcommits": "^4.5.0",
    "husky": "^5.1.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-is": "^17.0.1",
    "semantic-release": "^17.4.0",
    "ts-node": "^9.1.1",
    "tsdx": "^0.14.1",
    "tslib": "^2.1.0",
    "typescript": "^4.2.2",
    "watch": "^1.0.2"
  }
}
