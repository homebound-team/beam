{
  "name": "@homebound/beam",
  "version": "0.1.0",
  "author": "Homebound",
  "license": "MIT",
  "main": "dist/index.js",
  "module": "dist/beam.esm.js",
  "typings": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/homebound-team/beam"
  },
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": "14.8.0"
  },
  "scripts": {
    "start": "concurrently -c green,blue,magenta 'yarn:watch:beam' 'yarn:watch:truss' 'yarn:storybook'",
    "watch": "concurrently -c blue,magenta 'yarn:watch:beam' 'yarn:watch:truss'",
    "watch:beam": "tsdx watch --format esm",
    "watch:truss": "cd ./truss && watch 'npm run generate' ./",
    "build": "tsdx build --format esm",
    "build:truss": "cd ./truss && npm run generate",
    "build:storybook": "build-storybook",
    "test": "tsdx test --passWithNoTests",
    "lint": "tsdx lint --write-file",
    "prepare": "yarn run build",
    "storybook": "start-storybook -p 9000",
    "chromatic": "chromatic --project-token=074248da7284 --exit-once-uploaded"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 120,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "peerDependencies": {
    "react": ">=16"
  },
  "dependencies": {
    "@emotion/react": "^11.1.5",
    "@react-types/shared": "^3.4.0"
  },
  "devDependencies": {
    "@babel/core": "^7.13.1",
    "@emotion/babel-preset-css-prop": "^11.2.0",
    "@storybook/addon-essentials": "^6.1.20",
    "@storybook/addon-info": "^5.3.21",
    "@storybook/addon-links": "^6.1.20",
    "@storybook/addons": "^6.1.20",
    "@storybook/react": "^6.1.20",
    "@types/jest": "^26.0.20",
    "@types/react": "^17.0.2",
    "@types/react-dom": "^17.0.1",
    "babel-loader": "^8.2.2",
    "chromatic": "^5.6.3",
    "concurrently": "^6.0.0",
    "conventional-changelog-conventionalcommits": "^4.5.0",
    "husky": "^5.1.1",
    "jest": "^26.6.3",
    "prettier-plugin-organize-imports": "^1.1.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-is": "^17.0.1",
    "semantic-release": "^17.4.0",
    "ts-node": "^9.1.1",
    "tsdx": "^0.14.1",
    "tslib": "^2.1.0",
    "typescript": "^4.2.2",
    "watch": "^1.0.2"
  },
  "resolutions": {
    "**/@typescript-eslint/eslint-plugin": "^4.11.1",
    "**/@typescript-eslint/parser": "^4.11.1",
    "**/jest": "^26.6.3",
    "**/ts-jest": "^26.4.4",
    "**/typescript": "^4.2.2"
  }
}
