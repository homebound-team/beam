{
  "extends": "@homebound/tsconfig/tsconfig.json",
  "compilerOptions": {
    "lib": ["ESNext", "DOM"],
    "types": ["jest", "node"],
    // Use React 17 _jsx / automatic runtime support for nice emotion integration
    "jsx": "react-jsx",
    "jsxImportSource": "@homebound/fast-css-prop",
    "module": "Preserve",
    // Let tsup rewrite path-less imports
    "moduleResolution": "bundler",
    "noEmit": true,
    "skipLibCheck": true
  }
}
